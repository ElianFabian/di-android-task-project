<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.taskadd.TaskAddFragment"
        android:id="@+id/frameLayout">

    <!--region Guide Lines-->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />
    <!--endregion-->

    <!--region Name-->
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/glEnd"
            app:layout_constraintBottom_toTopOf="@+id/glBottom"
            app:layout_constraintTop_toBottomOf="@+id/glTop"
            app:layout_constraintStart_toEndOf="@+id/glStart"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintVertical_bias="0.14"
            android:foreground="@drawable/shape_round_stroke">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tieName_hint"
                android:background="@color/white"
                android:textColorHint="#616161" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--endregion-->

    <!--region Description-->
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/glEnd"
            app:layout_constraintBottom_toTopOf="@+id/glBottom"
            app:layout_constraintTop_toBottomOf="@+id/tilName"
            app:layout_constraintStart_toEndOf="@+id/glStart"
            app:layout_constraintVertical_bias="0.08"
            android:foreground="@drawable/shape_round_stroke">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/tieDescription_hint"
                android:background="@color/white"
                android:textColorHint="#616161" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--endregion-->

    <!--region Importance-->
    <Spinner
            android:id="@+id/spImportance"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/glBottom"
            app:layout_constraintTop_toBottomOf="@id/tilDescription"
            app:layout_constraintStart_toEndOf="@id/glStart"
            app:layout_constraintEnd_toStartOf="@id/glEnd"
            android:layout_height="wrap_content"
            android:entries="@array/importance"
            android:spinnerMode="dialog"
            android:prompt="@string/spImportance_prompt"
            app:layout_constraintVertical_bias="0.15"
            android:minHeight="48dp" />
    <!--endregion-->

    <!--region Forecast end date-->
    <EditText
            android:id="@+id/etDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/glBottom"
            app:layout_constraintTop_toBottomOf="@id/spImportance"
            app:layout_constraintStart_toEndOf="@id/glStart"
            app:layout_constraintEnd_toStartOf="@id/ibDate"
            android:labelFor="@id/ibDate"
            android:focusable="false"
            android:inputType="date"
            app:layout_constraintVertical_bias="0.33"
            android:contentDescription="@string/etDate_contentDescription"
            android:minHeight="48dp"
            tools:ignore="EditableContentDescCheck" />

    <ImageButton
            android:id="@+id/ibDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/etDate"
            app:layout_constraintTop_toTopOf="@id/etDate"
            app:layout_constraintStart_toEndOf="@id/etDate"
            app:layout_constraintEnd_toStartOf="@id/glEnd"
            android:src="@drawable/ic_date"
            android:contentDescription="@string/ibDate_contentDescription" />
    <!--endregion-->

    <!--region FAB-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_check"
            android:layout_margin="@dimen/fab_layout_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/task_add__fab_contentDescription" />
    <!--endregion-->

</androidx.constraintlayout.widget.ConstraintLayout>